<Window x:Class="ExcursionTickets.Wpf.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чек" Height="460" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Чек" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
            <TextBlock Text="Информация:" FontSize="16" Margin="10" HorizontalAlignment="Center" FontWeight="Bold"/>

            <TextBlock Name="PaymentIdTextBlock" Text="ID Платежа:" FontSize="14" Margin="10"/>
            <TextBlock Name="TicketQuantityTextBlock" Text="Кол-во билетов:" FontSize="14" Margin="10"/>
            <TextBlock Name="PaymentTypeTextBlock" Text="Тип оплаты:" FontSize="14" Margin="10"/>
            <TextBlock Name="AmountTextBlock" Text="Сумма платежа:" FontSize="14" Margin="10"/>
            <TextBlock Name="ChangeTextBlock" Text="Сдача:" FontSize="14" Margin="10"/>
            <TextBlock Name="PaymentTimeTextBlock" Text="Время платежа:" FontSize="14" Margin="10"/>

            <TextBlock Text="Благодарим за покупку!" FontSize="16" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
        <Button Content="Получить билет" Click="GetTicketButton_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 230 0 25" Width="120" Height="30"
                    Background="White" BorderBrush="Black"/>
    </Grid>
</Window>